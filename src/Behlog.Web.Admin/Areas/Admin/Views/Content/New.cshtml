@model CreateContentViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "نوشته جدید - " + Model.ContentTypeTitle;
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    نوشته جدید - @Model.ContentTypeTitle
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        
        
        <form class="row row-cards" id="createForm" method="POST"
              asp-controller="Content" asp-action="New" asp-area="@WebsiteAreaNames.Admin"
              asp-antiforgery="true">

            <div class="col-lg-4">
                <div class="row row-cards">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">
                                    تنظیمات
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="CategorySelect" class="form-label">دسته بندی</label>
                                    <select type="text" class="form-select" 
                                            placeholder="انتخاب دسته بندی" 
                                            id="select-category" asp-items="Model.CategorySelect.ToSelectList()">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="row row-cards">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">
                                    نوشته جدید
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">عنوان</label>
                                    <input asp-for="Title" class="form-control" placeholder="عنوان نوشته" />
                                    <span asp-validation-for="Title" class="invalid-feedback"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Slug" class="form-label">نامک</label>
                                    <input asp-for="Slug" class="form-control" placeholder="برای URL نوشته" />
                                    <span asp-validation-for="Slug" class="invalid-feedback"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <textarea asp-for="Body" rows="10" class="form-control"></textarea>
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section footer
{
    <script src="~/behlog/libs/tom-select/dist/js/tom-select.base.min.js" defer></script>
}
