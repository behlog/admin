@model CreateContentViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "نوشته جدید - " + Model.ContentTypeTitle;
}

<div class="content-header row">
    <div class="content-header-left col-12 mb-2 mt-1">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left pr-1">
                    @ViewData["Title"]
                </h5>
                <div class="breadcrumb-wrapper">
                    <ol class="breadcrumb p-0 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" asp-area="@WebsiteAreaNames.Admin">
                                <i class="bx bx-home-alt"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="Content" asp-action="Index"
                               asp-route-lang="@Model.LangCode" asp-route-contentType="@Model.ContentTypeName"
                               asp-area="Admin">
                                @Model.ContentTypeTitle
                            </a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-body">
    <section>
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger" role="alert">
                            <a href="#" class="close" data-dismiss="alert">×</a>
                            @Html.Raw(Model.ErrorMessages)
                        </div>
                    }
                    <form id="my-form" asp-controller="Content" asp-action="New"
                          method="post" class="row material-form" asp-antiforgery="true">
                        <input type="hidden" asp-for="LangId"/>
                        <input type="hidden" asp-for="LangCode"/>
                        <input type="hidden" asp-for="LangTitle"/>
                        <input type="hidden" asp-for="ContentTypeId"/>
                        <input type="hidden" asp-for="ContentTypeName"/>
                        <input type="hidden" asp-for="ContentTypeTitle"/>

                        <div class="col-md-8 col-12">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Title">عنوان</label>
                                        <input asp-for="Title" class="form-control" placeholder="عنوان نوشته"/>
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Slug" class="form-label">نامک</label>
                                        <input asp-for="Slug" class="form-control" placeholder="برای URL نوشته"/>
                                        <span asp-validation-for="Slug"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="AltTitle" class="form-label">عنوان جاگزین</label>
                                        <input asp-for="AltTitle" class="form-control" placeholder="عنوان جایگزین"/>
                                        <span asp-validation-for="AltTitle"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Summary">خلاصه نوشته</label>
                                        <textarea asp-for="Summary" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="Summary"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="Body" />
                                        <div id="editor-container">
                                            <div class="quill-toolbar">
                                                <span class="ql-formats">
                                                    <select class="ql-header">
                                                        <option value="1">سرتیتر</option>
                                                        <option value="2">زیرتیتر</option>
                                                        <option selected>معمولی</option>
                                                    </select>
                                                </span>
                                                <span class="ql-formats">
                                                    <button class="ql-bold"></button>
                                                    <button class="ql-italic"></button>
                                                    <button class="ql-underline"></button>
                                                </span>
                                                <span class="ql-formats">
                                                    <button class="ql-list" value="ordered"></button>
                                                    <button class="ql-list" value="bullet"></button>
                                                </span>
                                                <span class="ql-formats">
                                                    <button class="ql-link"></button>
                                                    <button class="ql-image"></button>
                                                    <button class="ql-video"></button>
                                                </span>
                                                <span class="ql-formats">
                                                    <button class="ql-formula"></button>
                                                    <button class="ql-code-block"></button>
                                                </span>
                                                <span class="ql-formats">
                                                    <button class="ql-clean"></button>
                                                </span>
                                            </div>
                                            <div class="editor">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-4 col-6">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>دسته بندی</label>
                                    <select class="form-control">
                                        <option value="0">cat 1</option>
                                        <option value="1">cat 2</option>
                                    </select>

                                </div>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-start pt-1">
                            <button type="submit" class="btn btn-primary mr-1 mb-1">ارسال</button>
                            <a asp-controller="Content" asp-action="Index" class="btn btn-light-secondary mr-1 mb-1">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
</div>

@section footer
{
    <script href="~/behlog/assets/vendors/js/editors/quill/katex.min.js" type="text/javascript"></script>
    <script href="~/behlog/assets/vendors/js/editors/quill/highlight.min.js" type="text/javascript"></script>
    <script href="~/behlog/assets/vendors/js/editors/quill/quill.min.js" type="text/javascript"></script>
    <script href="~/behlog/assets/vendors/js/extensions/jquery.steps.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        
        $(document).ready(function() {
            'use strict';
            var editor = new Quill('#editor-container .editor', {
                bounds: '#editor-container .editor',
                modules: {
                    'formula': true,
                    'syntax': true,
                    'toolbar': '#editor-container .quill-toolbar'
                },
                theme: 'snow'
            });
        });
        
    </script>
}
